<div id="login-form">
  <br>
  <br>
  <h3 class="h3style"><span class="spanBlue">Log</span> In</h3>
  <form class ="form-class" action="/auth/login" method="POST">
    <label class="label-class"> 
      <input class="input-class" type="text" name="username" placeholder="Your username" />
    </label>

    <label class="label-class">
      <input class="input-class" type="email" name="email" placeholder="Your email" />
    </label>

    <label class="label-class">
      <input class="input-class" type="password" name="password" placeholder="Your password" />
    </label>

    <button class='sign-up-button' type="submit">Log In</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>
